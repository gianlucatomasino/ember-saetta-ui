<Saetta::Stack
  @direction='col'
  @crossAlignment='start'
  @density='compact'
  as |Stack|
>
  {{#if @label}}
    <Stack.item>
      <div class='text-xs font-medium pl-0.5'>{{@label}}</div>
    </Stack.item>
  {{/if}}
  <Stack.item>
    <Saetta::Stack
      @direction='row'
      @density='compact'
      class='border border-gray-300 rounded shadow-md bg-white'
      as |Stack|
    >
      <Stack.item @padding={{(hash left='2')}}>
        <Saetta::Heroicon
          @icon='magnifying-glass'
          class='text-gray-600 bg-white'
        />
      </Stack.item>
      <Stack.item @canGrow={{true}}>
        {{! template-lint-disable require-input-label }}
        <Input
          autocomplete='off'
          class='focus:ring-0 border-0 border-gray-300 p-1.5 text-gray-800 pl-2 placeholder:text-sm placeholder:text-gray-400 rounded'
          @value={{@value}}
          placeholder={{@placeholder}}
          {{on 'input' this.onInput}}
        />
      </Stack.item>
    </Saetta::Stack>
  </Stack.item>
</Saetta::Stack>